<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Remove Compare Buttons -->
        <referenceBlock name="category.product.addto.compare" remove="true"/> <!-- PLP -->
        <referenceBlock name="catalogsearch.product.addto.compare" remove="true"/> <!-- Search Results -->
        <referenceBlock name="view.addto.compare" remove="true"/> <!-- PDP -->
        <referenceBlock name="wishlist.product.addto.compare" remove="true"/> <!-- Wishlist -->

        <!-- Remove Compare Sidebar and Link -->
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="catalog.compare.link" remove="true"/>

        <!-- Remove from related/upsell/crosssell -->
        <referenceBlock name="related.product.addto.compare" remove="true"/>
        <referenceBlock name="upsell.product.addto.compare" remove="true"/>
        <referenceBlock name="crosssell.product.addto.compare" remove="true"/>
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="Mavenbird.remove.compare" template="Mavenbird_DisableCompare::remove_compare.phtml" before="-"/>
        </referenceBlock>
    </body>
</page>
